<div id="app">

  {{> nav }}

  <div id="loadingBarContainer" v-show="loading">
    <div id="loadingBar"></div>
  </div>

  <div class="container charts" v-show="loaded">

    <div class="this-row-1" v-for="i in Math.ceil(items.length / 3)" >
      <div class="columns" >
        <div class="column is-4" v-for="item in items.slice((i - 1) * 3, i * 3)">
          <div class="card" >
            <div class="card-content">
              <div class="content">
                <h2><i v-bind:class="'cc ' + item.symbol" v-bind:title="item.symbol"></i> \{{item.name}}</h2>

                <div class="coinPrice has-text-dark">$\{{ formatCurrency(item.price_usd) }}</div><br/>


                <div class="field is-grouped is-grouped-multiline has-text-centered">
                  <div class="control">
                    <div class="tags has-addons" >
                      <div class="tag is-dark">24h</div>
                      <div v-bind:class="{ 'tag coinChange is-success': item.percent_change_24h >= 0 , 'tag coinChange is-danger': item.percent_change_24h < 0}">\{{ item.percent_change_24h }}%</div>
                    </div>
                  </div>
                  <div class="control">
                    <div class="tags has-addons">
                      <div class="tag is-dark">7d</div>
                      <div v-bind:class="{ 'tag coinChange is-success': item.percent_change_7d >= 0 , 'tag coinChange is-danger': item.percent_change_7d < 0}">\{{ item.percent_change_7d }}%</div>
                    </div>
                  </div>
                  <div class="control">
                    <div class="tags has-addons">
                      <div class="tag is-dark">1h</div>
                      <div v-bind:class="{ 'tag coinChange is-success': item.percent_change_1h >= 0 , 'tag coinChange is-danger': item.percent_change_1h < 0}">\{{ item.percent_change_1h }}%</div>
                    </div>
                  </div>
                </div>

                <hr/>
                <div class="columns">
                  <div class="column">
                  <p class="heading has-text-grey	">Volume (24h)</p>
                    <p>$\{{ formatCurrency(item['24h_volume_usd']) }}</p>
                  </div>
                  <div class="column">
                    <p class="heading has-text-grey	">Total Supply</p>
                    <p>\{{ item.available_supply}} <span style="font-size:.8rem;">\{{ item.symbol }}</span></p>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>

